{
  "name": "x-windybot",
  "version": "1.0.0",
  "description": "Herramienta de automatización para capturar screenshots del radar meteorológico de Windy.com",
  "main": "scripts/screenshot.js",
  "scripts": {
    "screenshot": "node scripts/screenshot.js",
    "capture": "node scripts/capture-playwright.js",
    "capture:selenium": "node scripts/capture-selenium.js",
    "capture-hybrid": "node scripts/capture-selenium.js || bash scripts/capture-native.sh",
    "test-selenium": "node scripts/test-selenium.js",
    "setup-webdriver": "node -e \"require('chromedriver'); console.log('ChromeDriver configurado')\"",
    "test": "npm run test-selenium",
    "start:local": "node server/local-server.js",
    "publish:twitter": "node scripts/publish-to-twitter.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmtdev0/X-WindyBot.git"
  },
  "keywords": [
    "weather",
    "radar",
    "automation",
    "playwright",
    "twitter",
    "windy",
    "screenshots",
    "meteorology"
  ],
  "author": "jmtdev0",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chromedriver": "^140.0.4",
    "express": "^4.19.2",
    "minimist": "^1.2.8",
    "playwright": "^1.56.0",
    "selenium-webdriver": "^4.15.0",
    "sharp": "^0.34.4",
    "twitter-api-v2": "^1.17.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
